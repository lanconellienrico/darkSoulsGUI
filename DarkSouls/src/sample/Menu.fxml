   <children>
      <Pane prefHeight="506.25" prefWidth="900.0">
         <children>
            <ImageView fitHeight="506.25" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resource/start_menu.jpg" />
               </image>
            </ImageView>
            <Button fx:id="nuovaPartita" layoutX="382.0" layoutY="326.0" mnemonicParsing="false" onAction="#newGame" text="NUOVA PARTITA" textAlignment="CENTER" textFill="#b50000">
